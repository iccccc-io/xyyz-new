/* pages/home/home.wxss */
page {
  background: linear-gradient(to bottom, #f8f5f1 0%, #ffffff 100%);
  min-height: 100vh;
}

.home-container {
  padding: 0;
}

/* 顶部标题区 */
.header {
  background: linear-gradient(135deg, #b63b36 0%, #8b2e2a 100%);
  padding: 60rpx 40rpx 80rpx;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  z-index: 1;
}

.title-group {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 20rpx;
  letter-spacing: 4rpx;
}

/* 导航入口区 */
.nav-section {
  margin: -40rpx 30rpx 40rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(182, 59, 54, 0.12);
  padding: 40rpx 20rpx 30rpx;
  position: relative;
  z-index: 2;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 30rpx;
  position: relative;
  padding-bottom: 20rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(to right, #b63b36, #d4574f);
  border-radius: 3rpx;
}

/* Vant Grid 自定义样式 */
.van-grid-item {
  padding: 20rpx 0 !important;
}

.van-grid-item__content {
  padding: 30rpx 16rpx !important;
  background: #fafafa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.van-grid-item__content:active {
  background: #f5f5f5;
  transform: scale(0.95);
}

.van-grid-item__icon {
  font-size: 48rpx !important;
  margin-bottom: 16rpx;
}

.van-grid-item__text {
  font-size: 26rpx !important;
  color: #333333 !important;
  margin-top: 8rpx;
  font-weight: 500;
}

/* 社区入口 */
.community-section {
  margin-top: 30rpx;
}

.community-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #8b6f47 0%, #6d5636 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.banner-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.banner-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.banner-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.banner-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 预留区域 */
.placeholder {
  margin: 60rpx 30rpx;
  padding: 80rpx 40rpx;
  background: #ffffff;
  border-radius: 20rpx;
  border: 2rpx dashed #e5e5e5;
  text-align: center;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 2rpx;
}

