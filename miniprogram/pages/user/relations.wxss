/* pages/user/relations.wxss */
page {
  background: linear-gradient(180deg, #f8f5f5 0%, #f0f0f0 100%);
  min-height: 100vh;
}

.relations-container {
  min-height: 100vh;
}

/* 顶部 Tab 栏 */
.tabs-header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #ffffff;
  padding: 24rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 40rpx;
}

.tab-text {
  font-size: 30rpx;
  color: #666666;
  font-weight: 500;
  transition: color 0.3s;
}

.tab-item.active .tab-text {
  color: #b63b36;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  width: 48rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #c94843 0%, #b63b36 100%);
  border-radius: 3rpx;
}

/* 内容区域 */
.content-wrapper {
  padding: 24rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

/* 用户列表 */
.user-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.user-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid #f0f0f0;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-name.certified {
  color: #b63b36;
}

.user-title {
  font-size: 24rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 用户操作按钮 */
.user-action {
  flex-shrink: 0;
  margin-left: 20rpx;
}

/* 按钮基础样式 - 边框风格（与帖子页面一致） */
.action-btn {
  font-size: 26rpx;
  font-weight: 500;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  line-height: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  transition: all 0.2s;
  white-space: nowrap;
}

/* 已关注按钮 - 灰色边框 */
.action-btn.followed {
  border: 2rpx solid #cccccc;
  color: #888888;
  background: transparent;
}

.action-btn.followed:active {
  opacity: 0.7;
}

/* 互相关注按钮 - 灰色边框 */
.action-btn.mutual {
  border: 2rpx solid #cccccc;
  color: #888888;
  background: transparent;
}

.action-btn.mutual:active {
  opacity: 0.7;
}

/* 回关按钮 - 红色边框 */
.action-btn.follow-back {
  border: 2rpx solid #b63b36;
  color: #b63b36;
  background: transparent;
}

.action-btn.follow-back:active {
  opacity: 0.7;
}

/* 去聊天按钮 - 蓝色边框 */
.action-btn.chat {
  border: 2rpx solid #357abd;
  color: #357abd;
  background: transparent;
}

.action-btn.chat:active {
  opacity: 0.7;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
}

