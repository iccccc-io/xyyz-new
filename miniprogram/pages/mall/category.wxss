/* pages/mall/category.wxss */
page {
  height: 100vh;
  background: #f5f5f5;
}

.category-container {
  display: flex;
  height: 100vh;
}

/* ========== 左侧侧边栏 ========== */
.sidebar-wrap {
  width: 180rpx;
  height: 100%;
  flex-shrink: 0;
  background: #fafafa;
}

/* 自定义 Vant Sidebar 样式 */
.sidebar-wrap .van-sidebar {
  width: 180rpx !important;
  height: 100% !important;
}

.sidebar-wrap .van-sidebar-item {
  padding: 28rpx 20rpx !important;
  background: transparent !important;
}

.sidebar-wrap .van-sidebar-item--selected {
  background: #ffffff !important;
  border-left: 6rpx solid #8B2E2A !important;
}

.sidebar-wrap .van-sidebar-item--selected::before {
  display: none !important;
}

.sidebar-wrap .van-sidebar-item__text {
  font-size: 26rpx !important;
  color: #666666 !important;
}

.sidebar-wrap .van-sidebar-item--selected .van-sidebar-item__text {
  color: #8B2E2A !important;
  font-weight: bold !important;
}

/* ========== 右侧内容区 ========== */
.content-wrap {
  flex: 1;
  height: 100%;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.content-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  background: #ffffff;
  z-index: 10;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.header-count {
  font-size: 24rpx;
  color: #999999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

/* ========== 商品列表 (List View) ========== */
.products-list {
  padding: 20rpx 0;
}

.product-row {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.product-row:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

/* 左侧正方形图片 */
.row-image-wrap {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.row-image {
  width: 100%;
  height: 100%;
}

/* 右侧信息区 */
.row-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.row-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 8rpx;
}

/* 标签行 */
.row-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.row-tag {
  font-size: 20rpx;
  color: #8B2E2A;
  background: rgba(139,46,42,0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* 产地 */
.row-origin {
  display: flex;
  align-items: center;
  gap: 4rpx;
  margin-bottom: 8rpx;
}

.origin-icon {
  font-size: 22rpx;
}

.origin-text {
  font-size: 22rpx;
  color: #8B2E2A;
}

/* 价格与销量 */
.row-footer {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.row-price {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-symbol {
  font-size: 24rpx;
  color: #B63B36;
  font-weight: bold;
}

.price-value {
  font-size: 36rpx;
  color: #B63B36;
  font-weight: bold;
}

.price-original {
  font-size: 22rpx;
  color: #bbbbbb;
  text-decoration: line-through;
}

.row-sales {
  font-size: 22rpx;
  color: #999999;
}

/* 列表底部 */
.list-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0 50rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #bbbbbb;
}

