/* pages/mall/detail.wxss */
page {
  background: #ffffff;
  min-height: 100vh;
}

.detail-container {
  padding-bottom: 0;
}

/* ========== 首屏大图 ========== */
.image-section {
  position: relative;
  width: 100%;
  height: 750rpx;
  background: #f5f5f5;
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.image-counter {
  position: absolute;
  right: 30rpx;
  bottom: 80rpx;
  background: rgba(0,0,0,0.5);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  z-index: 10;
}

.image-counter text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 弧形遮罩 */
.curve-mask {
  position: absolute;
  bottom: -2rpx;
  left: 0;
  right: 0;
  height: 60rpx;
  background: #ffffff;
  border-radius: 60rpx 60rpx 0 0;
  z-index: 5;
}

/* ========== 内容区域 ========== */
.content-section {
  padding: 0 30rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 10;
}

/* 价格与信息卡片 */
.info-card {
  background: #ffffff;
  padding: 30rpx 0;
}

.price-row {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.price-group {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 32rpx;
  font-weight: bold;
  color: #B63B36;
}

.current-price {
  font-size: 56rpx;
  font-weight: bold;
  color: #B63B36;
  margin-right: 16rpx;
}

.original-price {
  font-size: 28rpx;
  color: #bbbbbb;
  text-decoration: line-through;
}

.sales-info {
  padding-bottom: 8rpx;
}

.sales-text {
  font-size: 24rpx;
  color: #999999;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.product-tag {
  margin-right: 0 !important;
}

.title-row {
  margin-bottom: 16rpx;
}

.product-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.5;
}

.origin-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.origin-icon {
  font-size: 24rpx;
}

.origin-text {
  font-size: 26rpx;
  color: #8B2E2A;
  font-weight: 500;
}

.stock-text {
  font-size: 24rpx;
  color: #999999;
  margin-left: auto;
}

/* ========== 文化溯源卡片 ========== */
.traceability-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #FDF8F5 0%, #F8F0EB 100%);
  border: 2rpx solid #E8D5CC;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  margin: 20rpx 0;
}

.trace-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.trace-icon {
  width: 64rpx;
  height: 64rpx;
  background: rgba(139,46,42,0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.trace-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.trace-label {
  font-size: 24rpx;
  color: #666666;
}

.trace-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B2E2A;
  font-family: "PingFang SC", "Noto Serif SC", serif;
}

.trace-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.trace-link {
  font-size: 26rpx;
  color: #8B2E2A;
  font-weight: 500;
}

/* ========== 商品简介 ========== */
.intro-card {
  background: #ffffff;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.header-line {
  width: 40rpx;
  height: 3rpx;
  background: linear-gradient(90deg, transparent, #8B2E2A);
}

.header-line:last-child {
  background: linear-gradient(90deg, #8B2E2A, transparent);
}

.header-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  letter-spacing: 4rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
}

/* ========== 购买数量 ========== */
.quantity-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.quantity-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 0;
  background: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
}

.qty-btn {
  width: 64rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  transition: all 0.2s;
}

.qty-btn:active:not(.disabled) {
  background: #e5e5e5;
}

.qty-btn.disabled {
  opacity: 0.5;
}

.qty-value {
  min-width: 80rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  background: #ffffff;
  height: 56rpx;
  line-height: 56rpx;
}

/* ========== 详情图片 ========== */
.detail-images {
  padding: 40rpx 0;
}

.detail-image {
  width: 100%;
  display: block;
  margin-top: 20rpx;
  border-radius: 12rpx;
}

/* ========== 底部占位 ========== */
.bottom-placeholder {
  height: 200rpx;
}

/* ========== 悬浮操作栏 (Apple Style) ========== */
.action-bar {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  bottom: 30rpx;
  z-index: 100;
}

.action-bar-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: rgba(255,255,255,0.85);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border-radius: 80rpx;
  padding: 16rpx 20rpx;
  box-shadow: 
    0 20rpx 60rpx rgba(0,0,0,0.15),
    0 4rpx 20rpx rgba(0,0,0,0.08),
    inset 0 1rpx 0 rgba(255,255,255,0.5);
  border: 1rpx solid rgba(255,255,255,0.5);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0,0,0,0.03);
  flex-shrink: 0;
}

.action-icon:active {
  background: rgba(0,0,0,0.08);
}

.action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.2s;
}

.cart-btn {
  background: rgba(139,46,42,0.1);
  color: #8B2E2A;
  border: 2rpx solid rgba(139,46,42,0.2);
}

.cart-btn:active {
  background: rgba(139,46,42,0.2);
}

.cart-btn text {
  color: #8B2E2A;
}

.buy-btn {
  background: linear-gradient(135deg, #8B2E2A 0%, #B63B36 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(139,46,42,0.3);
}

.buy-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(139,46,42,0.4);
}

.buy-btn text {
  color: #ffffff;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

