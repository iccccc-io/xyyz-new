/* pages/mall/topic.wxss */
page {
  background: #f8f5f1;
  min-height: 100vh;
}

.topic-container {
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* ========== 专题头部 Banner ========== */
.topic-header {
  position: relative;
  padding: 60rpx 40rpx;
  overflow: hidden;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 30rpx;
  position: relative;
  z-index: 2;
}

.header-icon {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.header-text {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 4rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
  letter-spacing: 2rpx;
}

/* 装饰圆形 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  overflow: hidden;
}

.deco-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255,255,255,0.1);
}

.deco-1 {
  width: 200rpx;
  height: 200rpx;
  top: -50rpx;
  right: -30rpx;
}

.deco-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: -40rpx;
  right: 100rpx;
}

.deco-3 {
  width: 100rpx;
  height: 100rpx;
  top: 30rpx;
  right: 200rpx;
}

/* ========== 统计栏 ========== */
.stats-bar {
  padding: 24rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-text {
  font-size: 26rpx;
  color: #666666;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

/* ========== 瀑布流容器 ========== */
.waterfall-container {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* ========== 商品卡片（复用商城首页样式） ========== */
.product-card {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  transition: all 0.2s ease;
}

.product-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.08);
}

.card-image-wrap {
  position: relative;
  width: 100%;
  background: #f5f5f5;
}

.card-image {
  width: 100%;
  display: block;
}

.card-tags {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.card-tag {
  font-size: 20rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #8B2E2A 0%, #B63B36 100%);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.card-content {
  padding: 20rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.card-origin {
  display: flex;
  align-items: center;
  gap: 4rpx;
  margin-bottom: 16rpx;
}

.origin-icon {
  font-size: 22rpx;
}

.origin-text {
  font-size: 22rpx;
  color: #8B2E2A;
  font-weight: 500;
}

.card-footer {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.price-wrap {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.current-price {
  font-size: 34rpx;
  font-weight: bold;
  color: #B63B36;
}

.original-price {
  font-size: 22rpx;
  color: #bbbbbb;
  text-decoration: line-through;
}

.sales-text {
  font-size: 22rpx;
  color: #999999;
}

/* ========== 加载更多 ========== */
.loading-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

/* ========== 没有更多 ========== */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 50rpx 0 30rpx;
}

.no-more-line {
  width: 80rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #d5ccc5);
}

.no-more-line:last-child {
  background: linear-gradient(90deg, #d5ccc5, transparent);
}

.no-more-text {
  font-size: 24rpx;
  color: #a09080;
  letter-spacing: 2rpx;
}

