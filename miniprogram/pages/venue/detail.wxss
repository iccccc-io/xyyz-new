/* pages/venue/detail.wxss */
page {
  background-color: #f7f5f1;
  min-height: 100vh;
}

.venue-detail-container {
  padding-bottom: 40rpx;
}

/* 顶部轮播图 */
.swiper-wrapper {
  width: 100%;
  height: 500rpx;
  background-color: #e5e5e5;
}

.venue-swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.swiper-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  gap: 20rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999999;
}

/* 基本信息卡片 */
.info-card {
  margin: -60rpx 30rpx 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.venue-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  gap: 20rpx;
}

.info-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
  min-width: 160rpx;
}

.label-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
}

/* 地址行特殊样式 */
.address-row {
  align-items: center;
}

.address-value {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nav-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #fff5f0 0%, #ffe8e0 100%);
  border-radius: 30rpx;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.nav-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.nav-text {
  font-size: 26rpx;
  color: #b63b36;
  font-weight: 500;
}

/* 电话行特殊样式 */
.phone-row {
  align-items: center;
}

.phone-row:active {
  background: #fafaf8;
  border-radius: 12rpx;
  margin: 0 -20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.phone-value {
  color: #b63b36;
  font-weight: 500;
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background: #f0f0f0;
  margin: 10rpx 0;
}

/* 详情卡片通用样式 */
.detail-card {
  margin: 0 30rpx 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(to bottom, #b63b36, #8b2e2a);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* 简介内容 */
.intro-content {
  font-size: 30rpx;
  color: #666666;
  line-height: 2;
  text-align: justify;
  letter-spacing: 1rpx;
}

/* 相关资讯 */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.news-item {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background: #fafaf8;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.news-item:active {
  background: #f5f5f3;
}

.news-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.news-date {
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

.news-cover {
  width: 180rpx;
  height: 120rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

/* 加载和空状态 */
.loading-wrapper,
.empty-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

