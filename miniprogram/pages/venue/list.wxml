<!--pages/venue/list.wxml-->
<view class="venue-list-container">
  <!-- 场所列表 -->
  <block wx:if="{{venueList.length > 0}}">
    <view 
      class="venue-card"
      wx:for="{{venueList}}"
      wx:key="_id"
      bindtap="goToDetail"
      data-id="{{item._id}}"
    >
      <!-- 封面大图 -->
      <view class="venue-cover">
        <image 
          wx:if="{{item.media_list && item.media_list.length > 0}}"
          class="cover-image" 
          src="{{item.media_list[0].url}}" 
          mode="aspectFill"
        />
        <view wx:else class="cover-placeholder">
          <van-icon name="photo-o" size="80" color="#d0d0d0" />
        </view>
        <view class="cover-mask"></view>
      </view>
      
      <!-- 信息区域 -->
      <view class="venue-info">
        <view class="venue-name">{{item.name}}</view>
        <view class="venue-address">
          <van-icon name="location-o" size="14" color="#999" />
          <text class="address-text">{{item.address}}</text>
        </view>
      </view>
    </view>
  </block>

  <!-- 空状态 -->
  <view class="empty-state" wx:if="{{venueList.length === 0 && !loading}}">
    <van-empty description="暂无{{typeName}}数据" />
  </view>

  <!-- 加载状态 -->
  <view class="loading-state" wx:if="{{loading}}">
    <van-loading type="spinner" color="#b63b36" size="40">加载中...</van-loading>
  </view>
</view>

