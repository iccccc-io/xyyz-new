/* pages/venue/list.wxss */
page {
  background-color: #f7f5f1;
  min-height: 100vh;
}

.venue-list-container {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

/* 场所卡片 */
.venue-card {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.venue-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 封面大图 */
.venue-cover {
  position: relative;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
}

.cover-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.2));
}

/* 信息区域 */
.venue-info {
  padding: 30rpx;
  background: #ffffff;
}

.venue-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.venue-address {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.address-text {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.6;
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 空状态和加载状态 */
.empty-state,
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

