/* pages/gerenzhongxin/gerenzhongxin.wxss */

.user-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f5f5 0%, #f0f0f0 100%);
}

/* 头部沉浸区 */
.immersive-header {
  background: linear-gradient(135deg, #c94843 0%, #8b2c2a 60%, #6d2220 100%);
  padding: 100rpx 40rpx 100rpx;
  position: relative;
  overflow: hidden;
}

/* 头部装饰 - 水墨风格纹理 */
.immersive-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -30%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
  border-radius: 50%;
}

.immersive-header::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -20%;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
  border-radius: 50%;
}

/* 用户信息 */
.user-profile {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.4);
  margin-right: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.user-info {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-nickname {
  font-size: 42rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.certified-tag,
.normal-tag {
  display: inline-block;
  padding: 8rpx 18rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.certified-tag {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.3) 0%, rgba(255, 180, 0, 0.2) 100%);
  color: #FFD700;
  border: 1rpx solid rgba(255, 215, 0, 0.5);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
}

.normal-tag {
  background: rgba(255, 255, 255, 0.15);
  color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
}

/* 统计栏 - 毛玻璃效果 */
.stats-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.18);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border-radius: 24rpx;
  padding: 32rpx 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  transition: opacity 0.2s;
}

.stat-item:active {
  opacity: 0.7;
}

.stat-number {
  font-size: 38rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.15);
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

.stat-divider {
  width: 1rpx;
  height: 50rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(255, 255, 255, 0.4) 50%, transparent 100%);
}

/* 悬浮白色卡片区 */
.floating-body {
  margin-top: -30rpx;
  padding: 0 24rpx;
  padding-bottom: 40rpx;
  position: relative;
  z-index: 2;
}

/* 卡片通用样式 - 毛玻璃白色 */
.section-card {
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
}

/* 标题左侧装饰线 */
.section-title::before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #c94843 0%, #b63b36 100%);
  border-radius: 3rpx;
}

.section-more {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.section-more text {
  margin-right: 4rpx;
}

/* 订单宫格 */
.order-grid {
  display: flex;
  justify-content: space-between;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.order-icon-wrapper {
  position: relative;
  width: 88rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, rgba(182, 59, 54, 0.08) 0%, rgba(182, 59, 54, 0.15) 100%);
  border-radius: 50%;
  margin-bottom: 14rpx;
  transition: transform 0.2s;
}

.order-icon-wrapper:active {
  transform: scale(0.95);
}

.order-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  border-radius: 16rpx;
  padding: 0 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.4);
}

.order-label {
  font-size: 24rpx;
  color: #666;
}

/* 工具卡片 */
.tools-card {
  padding: 16rpx 0;
}

.tools-card .section-header {
  padding: 16rpx 32rpx 8rpx;
  margin-bottom: 0;
}

/* Tabs 内容区 */
.content-tabs-wrapper {
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

/* 瀑布流 */
.waterfall-container {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
  background: linear-gradient(180deg, rgba(248, 245, 245, 0.5) 0%, rgba(245, 245, 245, 0.8) 100%);
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.post-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s, box-shadow 0.2s;
}

.post-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.card-cover {
  position: relative;
  width: 100%;
}

.cover-image {
  width: 100%;
  display: block;
}

.image-count {
  position: absolute;
  right: 12rpx;
  top: 12rpx;
  background: rgba(0, 0, 0, 0.45);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border-radius: 20rpx;
  padding: 6rpx 14rpx;
  display: flex;
  align-items: center;
}

.image-count text {
  font-size: 20rpx;
  color: #fff;
  margin-left: 4rpx;
}

.card-content {
  padding: 18rpx;
}

.title-row {
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.project-tag {
  display: inline;
  background: linear-gradient(135deg, rgba(182, 59, 54, 0.12) 0%, rgba(182, 59, 54, 0.08) 100%);
  color: #b63b36;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.post-title {
  font-size: 26rpx;
  color: #333;
  display: inline;
  vertical-align: middle;
  line-height: 1.6;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.like-info {
  display: flex;
  align-items: center;
}

.like-count {
  font-size: 22rpx;
  color: #999;
  margin-left: 6rpx;
}

/* 空状态 */
.empty-posts {
  padding: 80rpx 0;
  background: linear-gradient(180deg, rgba(248, 245, 245, 0.5) 0%, rgba(245, 245, 245, 0.8) 100%);
}

/* 游客标签 */
.guest-tag {
  display: inline-block;
  padding: 8rpx 18rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
}

/* 退出登录按钮样式 */
.logout-cell-title {
  color: #999999 !important;
}

/* ========== 游客蒙版 ========== */
.guest-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.overlay-content {
  width: 600rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 60rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.overlay-icon {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, rgba(139,46,42,0.1) 0%, rgba(182,59,54,0.05) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.overlay-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.overlay-desc {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 50rpx;
}

.overlay-login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #8B2E2A 0%, #B63B36 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 8rpx 32rpx rgba(139,46,42,0.3);
  margin-bottom: 24rpx;
}

.overlay-login-btn::after {
  display: none;
}

.overlay-login-btn text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 4rpx;
}

.overlay-skip {
  padding: 16rpx 0;
}

.overlay-skip text {
  font-size: 26rpx;
  color: #8B2E2A;
}