/* pages/community/post.wxss */
page {
  background-color: #ffffff;
  padding-bottom: 160rpx;
}

.post-container {
  min-height: 100vh;
}

/* 图片选择器 */
.uploader-section {
  padding: 30rpx;
  background: #ffffff;
}

/* 编辑模式图片预览区 */
.images-preview-section {
  padding: 30rpx;
  background: #ffffff;
}

.preview-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
  border-radius: 8rpx;
  border: 1rpx solid rgba(255, 152, 0, 0.2);
}

.preview-tip text {
  font-size: 24rpx;
  color: #f57c00;
}

.images-scroll {
  width: 100%;
  white-space: nowrap;
}

/* 隐藏图片滚动区滚动条 */
.images-scroll::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.preview-image-list {
  display: flex;
  gap: 16rpx;
}

.preview-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

/* 内容输入区 */
.content-section {
  padding: 0 30rpx;
  background: #ffffff;
  position: relative;
}

/* 标题输入行 - 使用 flex 布局 */
.title-row {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 16rpx;
}

.title-input {
  flex: 1;
  min-width: 0;  /* 防止 flex 子元素溢出 */
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  padding: 20rpx 0;
}

/* 标题字数统计 */
.title-count {
  flex-shrink: 0;  /* 不压缩 */
  font-size: 24rpx;
  color: #cccccc;
  transition: color 0.2s ease;
  white-space: nowrap;
}

.title-count.count-warning {
  color: #f5a623;
}

.title-count.count-limit {
  color: #b63b36;
  font-weight: 500;
}

.placeholder-title {
  color: #cccccc;
  font-weight: bold;
}

.content-textarea {
  width: 100%;
  font-size: 30rpx;
  color: #333333;
  padding: 20rpx 0;
  min-height: 200rpx;
  line-height: 1.8;
}

.placeholder-content {
  color: #cccccc;
}

.content-count {
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  padding-bottom: 16rpx;
}

.content-count .count-limit {
  color: #b63b36;
  font-weight: 500;
}

/* ========== 话题标签区 - 新版三位一体设计 ========== */
.tags-section {
  padding: 24rpx 0;
  background: #ffffff;
  border-top: 16rpx solid #f5f5f5;
}

/* 预设标签滚动区 */
.preset-tags-scroll {
  width: 100%;
  white-space: nowrap;
  padding: 0 30rpx;
  box-sizing: border-box;
  /* 隐藏滚动条 - 多重保障 */
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
}

/* 隐藏滚动条 - WebKit */
.preset-tags-scroll::-webkit-scrollbar {
  display: none !important;
  width: 0 !important;
  height: 0 !important;
  background: transparent !important;
}

.preset-tags-list {
  display: inline-flex;
  gap: 16rpx;
}

.preset-tag {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 24rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.preset-tag .tag-hash {
  font-size: 26rpx;
  color: #999999;
  margin-right: 4rpx;
}

.preset-tag .tag-name {
  font-size: 26rpx;
  color: #666666;
}

.preset-tag.selected {
  background: linear-gradient(135deg, rgba(182, 59, 54, 0.12) 0%, rgba(212, 87, 79, 0.18) 100%);
  border: 1rpx solid rgba(182, 59, 54, 0.3);
}

.preset-tag.selected .tag-hash,
.preset-tag.selected .tag-name {
  color: #b63b36;
  font-weight: 500;
}

.preset-tag:active {
  transform: scale(0.96);
}

/* 已选标签行 */
.selected-tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 20rpx 30rpx 0;
  align-items: center;
}

/* 话题入口按钮 */
.topic-entry-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 24rpx;
  background: linear-gradient(135deg, rgba(182, 59, 54, 0.06) 0%, rgba(212, 87, 79, 0.1) 100%);
  border: 2rpx dashed rgba(182, 59, 54, 0.4);
  border-radius: 32rpx;
  transition: all 0.2s ease;
}

.topic-entry-btn text {
  font-size: 26rpx;
  color: #b63b36;
  font-weight: 500;
}

.topic-entry-btn:active {
  transform: scale(0.96);
  background: linear-gradient(135deg, rgba(182, 59, 54, 0.12) 0%, rgba(212, 87, 79, 0.16) 100%);
}

/* 已选标签 */
.selected-tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 16rpx 14rpx 20rpx;
  background: linear-gradient(135deg, #b63b36 0%, #d4574f 100%);
  border-radius: 32rpx;
  animation: tagPopIn 0.25s ease-out;
}

@keyframes tagPopIn {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.selected-tag-text {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 500;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.selected-tag-close {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 32rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
}

.selected-tag-close:active {
  background: rgba(255, 255, 255, 0.4);
}

/* 标签数量提示 */
.tags-count-tip {
  padding: 16rpx 30rpx 0;
}

.tags-count-tip text {
  font-size: 22rpx;
  color: #999999;
}

/* 选项列表 */
.options-section {
  margin-top: 16rpx;
  background: #ffffff;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.draft-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  background: #f5f5f5;
  border-radius: 40rpx;
}

.draft-btn text {
  font-size: 30rpx;
  color: #666666;
  font-weight: 500;
}

.publish-btn {
  flex: 2;
  text-align: center;
  padding: 24rpx 0;
  background: linear-gradient(135deg, #b63b36 0%, #d4574f 100%);
  border-radius: 40rpx;
}

.publish-btn text {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: bold;
}

.draft-btn:active {
  opacity: 0.8;
}

.publish-btn:active {
  opacity: 0.8;
}
