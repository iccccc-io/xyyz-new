/* pages/community/detail.wxss */
page {
  background-color: #ffffff;
  padding-bottom: 180rpx;
}

.detail-container {
  min-height: 100vh;
}

/* 顶部作者栏 */
.author-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.author-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
}

.author-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 6rpx;
}

.author-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.3;
}

.author-name.certified {
  color: #b63b36;
}

.author-title {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.3;
}

.follow-btn {
  padding: 12rpx 30rpx;
  border: 2rpx solid #b63b36;
  border-radius: 30rpx;
  background: transparent;
  transition: all 0.2s;
}

.follow-btn:active {
  opacity: 0.7;
}

.follow-btn text {
  font-size: 26rpx;
  color: #b63b36;
  font-weight: 500;
}

/* 已关注/互相关注 - 灰色边框样式 */
.follow-btn.following {
  border-color: #cccccc;
  background: transparent;
}

.follow-btn.following text {
  color: #888888;
}

/* 图片展示区域 */
.images-wrapper {
  position: relative;
  width: 100%;
  background: #f8f8f8;
}

/* 单图展示 */
.single-image-wrapper {
  width: 100%;
}

.single-image {
  width: 100%;
  display: block;
}

/* 多图轮播 */
.image-swiper {
  width: 100%;
  min-height: 400rpx;
}

.swiper-item-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-image {
  width: 100%;
  display: block;
}

.image-indicator {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.image-indicator text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 内容区域 */
.content-section {
  padding: 30rpx;
}

.post-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.post-content {
  font-size: 30rpx;
  color: #333333;
  line-height: 2;
  margin-bottom: 30rpx;
  text-align: justify;
}

/* 非遗标签 */
.project-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.project-tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  background: linear-gradient(135deg, #fff5f0 0%, #ffe8e0 100%);
  border-radius: 30rpx;
  border: 1rpx solid rgba(182, 59, 54, 0.2);
  line-height: 1;
}

.tag-icon {
  font-size: 26rpx;
  line-height: 1;
}

.tag-name {
  font-size: 26rpx;
  color: #b63b36;
  font-weight: 500;
  line-height: 1;
}

/* 普通标签 */
.normal-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.normal-tag {
  font-size: 26rpx;
  color: #666666;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  line-height: 1.2;
}

/* 位置和时间信息 */
.meta-info {
  display: flex;
  align-items: center;
  gap: 30rpx;
  padding-top: 20rpx;
}

.location-info {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.location-text {
  font-size: 26rpx;
  color: #999999;
}

.time-info {
  display: flex;
  align-items: center;
}

.time-text {
  font-size: 26rpx;
  color: #999999;
}

/* 分隔线 */
.divider-line {
  height: 16rpx;
  background: #f5f5f5;
}

/* 评论区 */
.comment-section {
  padding: 30rpx;
  padding-bottom: 80rpx;
}

.comment-header {
  margin-bottom: 30rpx;
}

.comment-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 评论列表 */
.comment-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.comment-item {
  display: flex;
  gap: 20rpx;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.comment-user {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.comment-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
}

.comment-time {
  font-size: 24rpx;
  color: #bbbbbb;
}

/* 无评论 */
.no-comment {
  text-align: center;
  padding: 60rpx 0;
}

.no-comment-text {
  font-size: 28rpx;
  color: #999999;
}

/* 底部互动栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx 30rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-input {
  flex: 1;
  min-width: 0;
}

.comment-input {
  width: 100%;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.action-icons {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.action-icon-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 0 16rpx;
}

.action-count {
  font-size: 24rpx;
  color: #333333;
  min-width: 40rpx;
  text-align: left;
}

/* 加载和空状态 */
.loading-wrapper,
.empty-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}
