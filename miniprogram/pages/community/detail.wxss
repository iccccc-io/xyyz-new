/* pages/community/detail.wxss */
page {
  background-color: #ffffff;
  padding-bottom: 180rpx;
}

.detail-container {
  min-height: 100vh;
}

/* 顶部作者栏 */
.author-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.author-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
}

.author-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 6rpx;
}

.author-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.3;
}

.author-name.certified {
  color: #b63b36;
}

.author-title {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.3;
}

.author-title.loading {
  color: #cccccc;
  letter-spacing: 2rpx;
}

.follow-btn {
  padding: 12rpx 30rpx;
  border: 2rpx solid #b63b36;
  border-radius: 30rpx;
  background: transparent;
  transition: all 0.2s;
}

.follow-btn:active {
  opacity: 0.7;
}

.follow-btn text {
  font-size: 26rpx;
  color: #b63b36;
  font-weight: 500;
}

/* 已关注/互相关注 - 灰色边框样式 */
.follow-btn.following {
  border-color: #cccccc;
  background: transparent;
}

.follow-btn.following text {
  color: #888888;
}

/* 加载中状态 - 灰色边框 */
.follow-btn.loading {
  border-color: #e0e0e0;
  background: transparent;
}

.follow-btn.loading text {
  color: #cccccc;
  letter-spacing: 2rpx;
}

/* 图片展示区域 */
.images-wrapper {
  position: relative;
  width: 100%;
  background: #f8f8f8;
}

/* 单图展示 */
.single-image-wrapper {
  width: 100%;
}

.single-image {
  width: 100%;
  display: block;
}

/* 多图轮播 */
.image-swiper {
  width: 100%;
  min-height: 400rpx;
}

.swiper-item-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-image {
  width: 100%;
  display: block;
}

.image-indicator {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.image-indicator text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 内容区域 */
.content-section {
  padding: 30rpx;
}

.post-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.post-content {
  font-size: 30rpx;
  color: #333333;
  line-height: 2;
  margin-bottom: 30rpx;
  text-align: justify;
}

/* 非遗标签 */
.project-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.project-tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  background: linear-gradient(135deg, #fff5f0 0%, #ffe8e0 100%);
  border-radius: 30rpx;
  border: 1rpx solid rgba(182, 59, 54, 0.2);
  line-height: 1;
}

.tag-icon {
  font-size: 26rpx;
  line-height: 1;
}

.tag-name {
  font-size: 26rpx;
  color: #b63b36;
  font-weight: 500;
  line-height: 1;
}

/* 普通标签 */
.normal-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.normal-tag {
  font-size: 26rpx;
  color: #666666;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  line-height: 1.2;
}

/* 位置和时间信息 */
.meta-info {
  display: flex;
  align-items: center;
  gap: 30rpx;
  padding-top: 20rpx;
}

.location-info {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.location-text {
  font-size: 26rpx;
  color: #999999;
}

.time-info {
  display: flex;
  align-items: center;
}

.time-text {
  font-size: 26rpx;
  color: #999999;
}

/* 分隔线 */
.divider-line {
  height: 16rpx;
  background: #f5f5f5;
}

/* ========== 评论区样式 ========== */
.comment-section {
  padding: 30rpx;
  padding-bottom: 80rpx;
}

.comment-header {
  margin-bottom: 30rpx;
}

.comment-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 评论加载中 */
.comments-loading {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

/* 评论列表 */
.comment-list {
  display: flex;
  flex-direction: column;
}

.comment-item-wrapper {
  margin-bottom: 36rpx;
}

/* 一级评论 */
.comment-item.level-1 {
  display: flex;
  gap: 20rpx;
}

.comment-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.comment-main {
  flex: 1;
  min-width: 0;
}

.comment-user-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.comment-user {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.comment-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.7;
  word-break: break-all;
}

.comment-footer {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-top: 12rpx;
}

.comment-time {
  font-size: 24rpx;
  color: #bbbbbb;
}

.comment-actions {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.comment-reply-btn {
  padding: 4rpx 0;
}

.comment-reply-btn text {
  font-size: 24rpx;
  color: #666666;
}

.comment-reply-btn:active {
  opacity: 0.6;
}

.comment-like-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 4rpx 0;
}

.comment-like-btn text {
  font-size: 24rpx;
  color: #999999;
}

.comment-like-btn.liked text {
  color: #b63b36;
}

.comment-like-btn:active {
  opacity: 0.6;
}

.comment-delete-btn {
  padding: 4rpx 0;
}

.comment-delete-btn text {
  font-size: 24rpx;
  color: #999999;
}

.comment-delete-btn:active {
  opacity: 0.6;
}

/* 二级评论区 */
.replies-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.reply-item {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.reply-item:last-child {
  margin-bottom: 0;
}

.reply-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.reply-main {
  flex: 1;
  min-width: 0;
}

.reply-content {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.7;
  word-break: break-all;
}

.reply-user {
  color: #666666;
  font-weight: 500;
}

.reply-to {
  color: #999999;
}

.reply-to-name {
  color: #b63b36;
}

.reply-text {
  color: #333333;
}

.reply-footer {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-top: 8rpx;
}

.reply-time {
  font-size: 22rpx;
  color: #bbbbbb;
}

.reply-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.reply-action text {
  font-size: 22rpx;
  color: #666666;
}

.reply-action:active {
  opacity: 0.6;
}

.reply-like-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 4rpx 0;
}

.reply-like-btn text {
  font-size: 22rpx;
  color: #999999;
}

.reply-like-btn.liked text {
  color: #b63b36;
}

.reply-like-btn:active {
  opacity: 0.6;
}

.reply-delete-btn {
  padding: 4rpx 0;
}

.reply-delete-btn text {
  font-size: 22rpx;
  color: #999999;
}

.reply-delete-btn:active {
  opacity: 0.6;
}

/* 已删除的回复样式 */
.reply-item.deleted {
  opacity: 0.7;
}

.reply-text.deleted-text {
  color: #999999;
  font-style: italic;
}

/* 展开更多回复 */
.expand-replies,
.collapse-replies {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 16rpx;
  padding: 8rpx 0;
}

.expand-replies text,
.collapse-replies text {
  font-size: 24rpx;
  color: #666666;
}

.expand-replies:active,
.collapse-replies:active {
  opacity: 0.6;
}

/* 无评论 */
.no-comment {
  text-align: center;
  padding: 60rpx 0;
}

.no-comment-text {
  font-size: 28rpx;
  color: #999999;
}

/* ========== 底部互动栏 ========== */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx 30rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-input {
  flex: 1;
  min-width: 0;
  margin-right: 20rpx;
}

.comment-input {
  width: 100%;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 28rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.action-right {
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

/* 发送按钮 */
.send-btn {
  padding: 14rpx 36rpx;
  background: linear-gradient(135deg, #c94843 0%, #b63b36 100%);
  border-radius: 36rpx;
}

.send-btn text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.send-btn:active {
  opacity: 0.8;
}

/* 互动图标 */
.action-icons {
  display: flex;
  align-items: center;
}

.action-icon-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 0 12rpx;
}

.action-icon-item:active {
  opacity: 0.6;
}

/* 禁用状态（自己的帖子） */
.action-icon-item.disabled:active {
  opacity: 1;
}

.action-icon-item .icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon-item .icon-ban {
  position: absolute;
  top: -6rpx;
  right: -8rpx;
  width: 22rpx;
  height: 22rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.action-count.disabled {
  color: #ccc;
}

/* 分享按钮样式重置 */
.share-btn {
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  background: transparent !important;
  border: none !important;
  padding: 0 12rpx !important;
  margin: 0 !important;
  min-height: auto !important;
  height: auto !important;
  line-height: 1 !important;
  width: auto !important;
  min-width: auto !important;
}

.share-btn::after {
  display: none !important;
  border: none !important;
}

.action-count {
  font-size: 24rpx;
  color: #333333;
  min-width: 40rpx;
  text-align: left;
}

.action-count.liked {
  color: #b63b36;
}

.action-count.collected {
  color: #FFC83D;
}

/* 加载和空状态 */
.loading-wrapper,
.empty-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}
