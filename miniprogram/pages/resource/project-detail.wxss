/* pages/resource/project-detail.wxss */
page {
  background-color: #f7f5f1;
  min-height: 100vh;
}

.project-detail-container {
  padding-bottom: 40rpx;
}

/* 顶部头图 */
.cover-image-wrapper {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.3));
}

/* 核心信息区 */
.info-card {
  margin: -60rpx 30rpx 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.project-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
}

.tags-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.van-cell-group {
  margin-top: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 详情卡片通用样式 */
.detail-card {
  margin: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(to bottom, #b63b36, #8b2e2a);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* 项目简介 */
.intro-content {
  font-size: 30rpx;
  color: #666666;
  line-height: 2;
  text-align: justify;
  letter-spacing: 1rpx;
}

/* 相关资料 */
.media-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.media-video {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.media-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 相关资讯 */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.news-item {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background: #fafaf8;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.news-item:active {
  background: #f5f5f3;
}

.news-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.news-date {
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

.news-cover {
  width: 180rpx;
  height: 120rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

/* 加载和空状态 */
.loading-wrapper,
.empty-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

