/* pages/resource/list.wxss */
page {
  background-color: #f7f5f1;
  height: 100vh;
}

.resource-container {
  width: 100%;
  height: 100vh;
  background-color: #f7f5f1;
}

/* 顶部固定导航区 */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: #f7f5f1;
  padding-bottom: 20rpx;
}

/* Tabs 切换栏 */
.tabs-bar {
  display: flex;
  background-color: #ffffff;
  margin: 0;
  padding: 0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666666;
  background-color: #ffffff;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  background: linear-gradient(135deg, #8b6f47 0%, #6d5636 100%);
  color: #ffffff;
  font-weight: bold;
}

/* 搜索与筛选栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx 0;
  background-color: #f7f5f1;
}

.search-bar .van-search {
  flex: 1;
  padding: 0;
}

.filter-icon {
  margin-left: 20rpx;
  padding: 16rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(139, 111, 71, 0.1);
}

/* 列表内容区 */
.list-content {
  padding: 20rpx 30rpx;
}

.list-item {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 2rpx;
  border-left: 6rpx solid #8b6f47;
  transition: all 0.2s ease;
}

.list-item:active {
  background-color: #fafaf8;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.item-info {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

.item-info:last-child {
  margin-bottom: 0;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 0;
  text-align: center;
}

/* 加载状态 */
.loading-state {
  padding: 80rpx 0;
  text-align: center;
}

/* 筛选弹窗 */
.filter-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fafaf8;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #e5e5e5;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.filter-body {
  flex: 1;
  padding: 20rpx 0;
}

.filter-section {
  margin-bottom: 40rpx;
  background-color: #ffffff;
  padding: 30rpx 40rpx;
}

.filter-section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-option {
  padding: 16rpx 32rpx;
  background-color: #f7f5f1;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666666;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.filter-option.active {
  background-color: #fff5f0;
  color: #8b6f47;
  border-color: #8b6f47;
  font-weight: bold;
}

/* 底部操作栏 */
.filter-footer {
  display: flex;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  border-top: 2rpx solid #e5e5e5;
  gap: 20rpx;
}

.filter-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  transition: all 0.2s ease;
}

.reset-btn {
  background-color: #f7f5f1;
  color: #666666;
  border: 2rpx solid #e5e5e5;
}

.reset-btn:active {
  background-color: #eeede9;
}

.confirm-btn {
  background: linear-gradient(135deg, #8b6f47 0%, #6d5636 100%);
  color: #ffffff;
}

.confirm-btn:active {
  opacity: 0.8;
}

