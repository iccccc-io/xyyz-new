/* pages/login/login.wxss */
page {
  background: linear-gradient(180deg, #FDF8F5 0%, #ffffff 100%);
  min-height: 100vh;
}

.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0 60rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* ========== 顶部装饰 ========== */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  overflow: hidden;
  z-index: 0;
}

.deco-circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(139,46,42,0.1) 0%, rgba(182,59,54,0.05) 100%);
}

.deco-1 {
  width: 400rpx;
  height: 400rpx;
  top: -150rpx;
  right: -100rpx;
}

.deco-2 {
  width: 250rpx;
  height: 250rpx;
  top: 100rpx;
  left: -80rpx;
}

/* ========== Logo 和标题 - 新中式极简风格 ========== */
.header-section {
  margin-top: 180rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-title-row {
  display: flex;
  align-items: flex-start;
  position: relative;
}

.logo-text {
  font-size: 56rpx;
  font-weight: bold;
  color: #8B2E2A;
  letter-spacing: 8rpx;
  font-family: "Songti SC", "STSong", "SimSun", "Noto Serif SC", serif;
  text-shadow: 0 2rpx 4rpx rgba(139,46,42,0.1);
}

/* 印章点缀 */
.logo-seal {
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #C94843 0%, #8B2E2A 100%);
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  margin-top: -4rpx;
  box-shadow: 0 2rpx 8rpx rgba(139,46,42,0.3);
  /* 印章倾斜效果 */
  transform: rotate(8deg);
}

.logo-seal {
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
  font-family: "Songti SC", "STSong", "SimSun", serif;
}

.logo-subtitle {
  display: block;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 6rpx;
  font-family: "PingFang SC", sans-serif;
}

/* ========== 加载状态 ========== */
.loading-section {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
}

/* ========== 登录成功状态 ========== */
.done-section {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
}

.done-text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #8B2E2A;
  font-weight: 500;
}

/* ========== 登录表单 ========== */
.form-section {
  margin-top: 60rpx;
  position: relative;
  z-index: 1;
}

/* 新用户提示 */
.new-user-tip {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.new-user-tip text {
  font-size: 28rpx;
  color: #666666;
  background: linear-gradient(135deg, rgba(139,46,42,0.08) 0%, rgba(182,59,54,0.05) 100%);
  padding: 16rpx 36rpx;
  border-radius: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

/* 头像选择 */
.avatar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.avatar-button {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  padding: 0;
  background: transparent;
  border: none;
  border-radius: 50%;
  overflow: visible;
}

.avatar-button::after {
  display: none;
}

.avatar-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid #f0f0f0;
  background: #f5f5f5;
  transition: all 0.3s ease;
}

.avatar-image.selected {
  border-color: #8B2E2A;
  box-shadow: 0 8rpx 24rpx rgba(139,46,42,0.2);
}

.avatar-edit-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #8B2E2A 0%, #B63B36 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(139,46,42,0.3);
}

.avatar-tip {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #999999;
}

/* 昵称输入 */
.nickname-item {
  margin-bottom: 60rpx;
}

.input-wrap {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 50rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.input-wrap:focus-within {
  border-color: #8B2E2A;
  box-shadow: 0 4rpx 20rpx rgba(139,46,42,0.15);
}

.input-icon {
  margin-right: 20rpx;
}

.nickname-input {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.input-placeholder {
  color: #bbbbbb;
}

/* 提交按钮 */
.submit-item {
  margin-bottom: 30rpx;
}

.submit-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #8B2E2A 0%, #B63B36 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 8rpx 32rpx rgba(139,46,42,0.3);
  transition: all 0.3s ease;
}

.submit-button::after {
  display: none;
}

.submit-button text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 4rpx;
}

.submit-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(139,46,42,0.4);
}

.submit-button.disabled {
  opacity: 0.7;
}

/* 跳过登录 */
.skip-wrap {
  text-align: center;
  padding: 20rpx 0;
}

.skip-text {
  font-size: 26rpx;
  color: #999999;
}

/* ========== 底部提示 ========== */
.footer-section {
  position: absolute;
  bottom: calc(60rpx + env(safe-area-inset-bottom));
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

.footer-tip {
  font-size: 24rpx;
  color: #999999;
}

.footer-link {
  font-size: 24rpx;
  color: #8B2E2A;
}

