/* components/post-menu/index.wxss */
.menu-container {
  position: relative;
  padding-bottom: env(safe-area-inset-bottom);
}

.menu-content {
  padding: 0;
}

/* 菜单头部 */
.menu-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 10rpx;
}

.back-btn {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 10rpx;
}

/* 分享对象区（预留） */
.share-section {
  padding: 30rpx;
  min-height: 120rpx;
}

.section-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  background: #fafafa;
  border-radius: 12rpx;
  border: 2rpx dashed #e0e0e0;
}

.placeholder-text {
  font-size: 26rpx;
  color: #bbb;
}

/* 分隔线 */
.section-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 0 30rpx;
}

/* 功能区 */
.function-section {
  width: 100%;
  white-space: nowrap;
}

/* 隐藏滚动条 */
.function-section::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  background: transparent;
}

.function-list {
  display: inline-flex;
  align-items: flex-start;
  padding: 30rpx;
  gap: 40rpx;
}

/* 功能按钮 */
.func-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  flex-shrink: 0;
  min-width: 100rpx;
}

.func-item::after {
  display: none;
}

.func-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  transition: all 0.2s;
}

.func-item:active .func-icon {
  transform: scale(0.95);
  background: #ebebeb;
}

.func-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  white-space: nowrap;
}

/* 分享按钮特殊处理 */
.share-item {
  padding: 0;
  margin: 0;
}

.share-btn-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  background: transparent !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1 !important;
  min-width: auto !important;
  width: auto !important;
}

.share-btn-wrap::after {
  display: none !important;
  border: none !important;
}

.share-btn-wrap .func-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.share-btn-wrap .func-text {
  font-size: 24rpx;
  color: #333;
}

/* 取消按钮 */
.menu-cancel {
  padding: 30rpx 0;
  text-align: center;
  border-top: 16rpx solid #f5f5f5;
}

.menu-cancel text {
  font-size: 30rpx;
  color: #666;
}

.menu-cancel:active {
  background: #f5f5f5;
}

/* 举报菜单 */
.report-menu .menu-header {
  justify-content: center;
}

.report-list {
  padding: 10rpx 0;
}

.report-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.report-item:last-child {
  border-bottom: none;
}

.report-item:active {
  background: #f9f9f9;
}

.report-reason {
  font-size: 30rpx;
  color: #333;
}

/* 加载遮罩 */
.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 10;
}
