/* components/post-menu/index.wxss */
.menu-container {
  position: relative;
  padding-bottom: env(safe-area-inset-bottom);
}

.menu-content {
  padding: 30rpx 30rpx 0;
}

/* 菜单头部 */
.menu-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.back-btn {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  padding: 10rpx;
}

/* 菜单网格 */
.menu-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx 20rpx;
  padding: 40rpx 0;
}

.menu-grid.author-grid {
  grid-template-columns: repeat(3, 1fr);
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.menu-item::after {
  display: none;
}

.menu-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  transition: all 0.2s;
}

.menu-item:active .menu-icon {
  transform: scale(0.95);
  background: #ebebeb;
}

/* 图标颜色定制 */
.menu-icon.share {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
}

.menu-icon.report {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
}

.menu-icon.edit {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
}

.menu-icon.delete {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
}

.menu-icon.privacy {
  background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%);
}

.menu-icon.comment-toggle {
  background: linear-gradient(135deg, #e0f7fa 0%, #b2ebf2 100%);
}

.menu-icon.top {
  background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
}

.menu-text {
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

.menu-text.danger {
  color: #e74c3c;
}

/* 取消按钮 */
.menu-cancel {
  padding: 30rpx 0;
  text-align: center;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 10rpx;
}

.menu-cancel text {
  font-size: 30rpx;
  color: #666;
}

.menu-cancel:active {
  background: #f5f5f5;
}

/* 举报菜单 */
.report-menu .menu-header {
  justify-content: center;
}

.report-list {
  padding: 20rpx 0;
}

.report-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.report-item:last-child {
  border-bottom: none;
}

.report-item:active {
  background: #f9f9f9;
}

.report-reason {
  font-size: 30rpx;
  color: #333;
}

/* 加载遮罩 */
.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 10;
}

