/* components/topic-search/index.wxss */
.topic-search-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #ffffff;
}

/* 头部 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 30rpx 20rpx;
  position: relative;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
}

.header-close {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 10rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  margin: 0 30rpx 20rpx;
  padding: 20rpx 24rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  height: 40rpx;
  line-height: 40rpx;
}

.search-placeholder {
  color: #999999;
}

.clear-btn {
  padding: 8rpx;
}

/* 搜索结果列表 */
.result-list {
  flex: 1;
  overflow-y: auto;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
}

/* 分区标题 */
.section-title {
  padding: 20rpx 30rpx 16rpx;
  font-size: 26rpx;
  color: #999999;
  background: #fafafa;
}

/* 结果项 */
.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:active {
  background: #f9f9f9;
}

/* 创建新话题项 */
.create-item {
  background: linear-gradient(135deg, rgba(182, 59, 54, 0.03) 0%, rgba(212, 87, 79, 0.06) 100%);
  border-bottom: 2rpx solid rgba(182, 59, 54, 0.1);
}

.create-item:active {
  background: linear-gradient(135deg, rgba(182, 59, 54, 0.08) 0%, rgba(212, 87, 79, 0.12) 100%);
}

.create-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(182, 59, 54, 0.1);
  border-radius: 50%;
  margin-right: 20rpx;
}

.create-text {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.create-label {
  font-size: 28rpx;
  color: #666666;
}

.create-name {
  font-size: 28rpx;
  color: #b63b36;
  font-weight: 500;
}

/* 话题信息 */
.topic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.topic-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.topic-count {
  font-size: 24rpx;
  color: #999999;
}

/* 提示文字 */
.no-match-tip,
.empty-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 30rpx;
  color: #999999;
  font-size: 26rpx;
}

